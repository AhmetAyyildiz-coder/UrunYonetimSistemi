@model IEnumerable<UrunYonetim.Entites.Siparis>

@{
    ViewBag.Title = "Index";
}

<h2>Siparisler</h2>

<p>
    @Html.ActionLink("Yeni siparis olustur", "Create" ,null, new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Musteri.Ad)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Urun.UrunAdi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SiparisNo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SiparisTarihi)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Musteri.Ad)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Urun.UrunAdi)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SiparisNo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SiparisTarihi)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.id }) |
            @Html.ActionLink("Details", "Details", new { id=item.id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.id })
        </td>
    </tr>
}

</table>
